<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.CustomerHomeFragment">

    <TextView
        android:id="@+id/backgroundCustomerHome"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-8dp"
        android:background="@drawable/green_rounded_corner_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileButtonCustomerHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_person_24_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createJobButtonCustomerHome"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corner_view"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundCustomerHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/createJobTextCustomerHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create A Job Now"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/createJobButtonCustomerHome"
        app:layout_constraintStart_toStartOf="@+id/createJobButtonCustomerHome"
        app:layout_constraintTop_toTopOf="@+id/createJobButtonCustomerHome" />

    <ImageView
        android:id="@+id/createJobArrowCustomerHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_forward_24_black"
        app:layout_constraintBottom_toBottomOf="@+id/createJobButtonCustomerHome"
        app:layout_constraintEnd_toEndOf="@+id/createJobButtonCustomerHome"
        app:layout_constraintStart_toStartOf="@+id/createJobButtonCustomerHome"
        app:layout_constraintTop_toBottomOf="@+id/createJobTextCustomerHome"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/activeJobBackgroundCustomerHome"
        android:layout_width="172dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/light_green_rounded_corner_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundCustomerHome" />

    <TextView
        android:id="@+id/jobHistoryBackgroundCustomerHome"
        android:layout_width="172dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/light_green_rounded_corner_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundCustomerHome" />

    <TextView
        android:id="@+id/currentJobListCustomerHome"
        android:layout_width="136dp"
        android:layout_height="172dp"
        android:background="@drawable/rounded_corner_view"
        android:gravity="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/currentJobButtonCustomerHome"
        app:layout_constraintEnd_toEndOf="@+id/activeJobBackgroundCustomerHome"
        app:layout_constraintStart_toStartOf="@+id/activeJobBackgroundCustomerHome"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <TextView
        android:id="@+id/jobHistoryListCustomerHome"
        android:layout_width="136dp"
        android:layout_height="172dp"
        android:background="@drawable/rounded_corner_view"
        android:gravity="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/jobHistoryButtonCustomerHome"
        app:layout_constraintEnd_toEndOf="@+id/jobHistoryBackgroundCustomerHome"
        app:layout_constraintStart_toStartOf="@+id/jobHistoryBackgroundCustomerHome"
        app:layout_constraintTop_toBottomOf="@+id/cardView4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="@+id/activeJobBackgroundCustomerHome"
        app:layout_constraintStart_toStartOf="@+id/activeJobBackgroundCustomerHome"
        app:layout_constraintTop_toTopOf="@+id/activeJobBackgroundCustomerHome"
        app:layout_gravity="fill">

        <TextView
            android:id="@+id/currentJobTextCustomerHome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Current Jobs"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="@+id/jobHistoryBackgroundCustomerHome"
        app:layout_constraintStart_toStartOf="@+id/jobHistoryBackgroundCustomerHome"
        app:layout_constraintTop_toTopOf="@+id/jobHistoryBackgroundCustomerHome"
        app:layout_gravity="fill">

        <TextView
            android:id="@+id/jobHistoryTextCustomerHome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="History"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/currentJobButtonCustomerHome"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/activeJobBackgroundCustomerHome"
        app:layout_constraintEnd_toEndOf="@+id/activeJobBackgroundCustomerHome"
        app:layout_constraintStart_toStartOf="@+id/activeJobBackgroundCustomerHome"
        app:layout_gravity="fill">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentJobAllCustomerHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="View All"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/currentJobArrowCustomerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_arrow_forward_24_black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/jobHistoryButtonCustomerHome"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_columnWeight="1"
        app:layout_constraintBottom_toBottomOf="@+id/jobHistoryBackgroundCustomerHome"
        app:layout_constraintEnd_toEndOf="@+id/jobHistoryBackgroundCustomerHome"
        app:layout_constraintStart_toStartOf="@+id/jobHistoryBackgroundCustomerHome"
        app:layout_gravity="fill"
        app:layout_rowWeight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jobHistoryAllCustomerHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="View All"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/jobHistoryArrowCustomerHome"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_arrow_forward_24_black" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/blackWhiteListButtonCustomerHome"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/green_background"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>