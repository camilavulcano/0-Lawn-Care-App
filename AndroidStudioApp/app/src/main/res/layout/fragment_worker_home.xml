<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WorkerHomeFragment">

    <TextView
        android:id="@+id/backgroundWorkerHome"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-8dp"
        android:background="@drawable/green_rounded_corner_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileButtonWorkerHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_person_24_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundWorkerHome" />

    <TextView
        android:id="@+id/searchJobButtonWorkerHome"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corner_view"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundWorkerHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/backgroundWorkerHome"
        app:layout_constraintTop_toTopOf="@+id/backgroundWorkerHome"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/searchJobTextWorkerHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Look For A Job Here"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/searchJobButtonWorkerHome"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@+id/searchJobButtonWorkerHome"
        app:layout_constraintTop_toTopOf="@+id/searchJobButtonWorkerHome" />

    <ImageView
        android:id="@+id/searchJobArrowWorkerHome"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_forward_24_black"
        app:layout_constraintBottom_toBottomOf="@+id/searchJobButtonWorkerHome"
        app:layout_constraintEnd_toEndOf="@+id/searchJobButtonWorkerHome"
        app:layout_constraintStart_toStartOf="@+id/searchJobButtonWorkerHome"
        app:layout_constraintTop_toBottomOf="@+id/searchJobTextWorkerHome"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/activeJobBackgroundWorkerHome"
        android:layout_width="172dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/light_green_rounded_corner_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundWorkerHome" />

    <TextView
        android:id="@+id/jobHistoryBackgroundWorkerHome"
        android:layout_width="172dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/light_green_rounded_corner_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundWorkerHome" />

    <TextView
        android:id="@+id/currentJobListWorkerHome"
        android:layout_width="136dp"
        android:layout_height="172dp"
        android:background="@drawable/rounded_corner_view"
        android:gravity="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/currentJobButtonWorkerHome"
        app:layout_constraintEnd_toEndOf="@+id/activeJobBackgroundWorkerHome"
        app:layout_constraintStart_toStartOf="@+id/activeJobBackgroundWorkerHome"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <TextView
        android:id="@+id/jobHistoryListWorkerHome"
        android:layout_width="136dp"
        android:layout_height="172dp"
        android:background="@drawable/rounded_corner_view"
        android:gravity="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/jobHistoryButtonWorkerHome"
        app:layout_constraintEnd_toEndOf="@+id/jobHistoryBackgroundWorkerHome"
        app:layout_constraintStart_toStartOf="@+id/jobHistoryBackgroundWorkerHome"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="@+id/activeJobBackgroundWorkerHome"
        app:layout_constraintStart_toStartOf="@+id/activeJobBackgroundWorkerHome"
        app:layout_constraintTop_toTopOf="@+id/activeJobBackgroundWorkerHome"
        app:layout_gravity="fill">

        <TextView
            android:id="@+id/currentJobTextWorkerHome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Current Jobs"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/jobHistoryButtonWorkerHome"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_columnWeight="1"
        app:layout_constraintBottom_toBottomOf="@+id/jobHistoryBackgroundWorkerHome"
        app:layout_constraintEnd_toEndOf="@+id/jobHistoryBackgroundWorkerHome"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="@+id/jobHistoryBackgroundWorkerHome"
        app:layout_gravity="fill"
        app:layout_rowWeight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jobHistoryAllWorkerHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="History"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/jobHistoryArrowWorkerHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_arrow_forward_24_black" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="@+id/jobHistoryBackgroundWorkerHome"
        app:layout_constraintStart_toStartOf="@+id/jobHistoryBackgroundWorkerHome"
        app:layout_constraintTop_toTopOf="@+id/jobHistoryBackgroundWorkerHome"
        app:layout_gravity="fill">

        <TextView
            android:id="@+id/jobHistoryTextWorkerHome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Past Jobs"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/currentJobButtonWorkerHome"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/activeJobBackgroundWorkerHome"
        app:layout_constraintEnd_toEndOf="@+id/activeJobBackgroundWorkerHome"
        app:layout_constraintStart_toStartOf="@+id/activeJobBackgroundWorkerHome"
        app:layout_gravity="fill">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentJobAllWorkerHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="View All"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/currentJobArrowWorkerHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_arrow_forward_24_black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>